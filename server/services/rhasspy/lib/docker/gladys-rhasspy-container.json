{
  "name": "gladys-rhasspy",
  "Image": "rhasspy/rhasspy",
  "cmd": ["--user-profiles", "/profiles", "--profile", "en"],
  "ExposedPorts": {
    "12101/tcp": {}
  },
  "HostConfig": {
    "Binds": ["/var/lib/gladysassistant/rhasspy/profiles:/profiles", "/etc/localtime:/etc/localtime:ro"],
    "PortBindings": {
      "12101/tcp": [
        {
          "HostPort": "12101"
        }
      ]
    },
    "RestartPolicy": {
      "Name": "always"
    },
    "NetworkMode": "host",
    "Dns": [],
    "DnsOptions": [],
    "DnsSearch": [],
    "BlkioWeightDevice": [],
    "Devices": [
      {
        "PathOnHost": "/dev/snd",
        "PathInContainer": "/dev/snd",
        "CgroupPermissions": "rwm"
      }
    ]
  }
}
