<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title><%= __('Sign in') %></title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <link href="/styles/dependencies/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/styles/dependencies/font-awesome.min.css">
        <!-- Theme style -->
        <link href="/styles/dependencies/adminLTE/AdminLTE.min.css" rel="stylesheet" type="text/css" />
        <link href="/styles/login.css" rel="stylesheet" type="text/css" />

    </head>
    <body>

        <div class="login-box" id="login-box">
            <form action="/session/create" method="post">
                <div class="login-box-body">
                    <div class="login-box-msg text-green"><h2><%= __('Sign in') %></h2></div>

                    <% if ( typeof req.session.flash !== 'undefined') { %>
                          <div id="login-alert" class="alert alert-danger">
                                  <%- req.flash('error') %>
                          </div>
                    <% } %>

                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="<%= __('Email') %>"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="<%= __('Password') %>"/>
                    </div> 
                    
                    <div class="footer">   
                        <p>                                                      
                        <button type="submit" class="btn btn-flat btn-success btn-block"><%= __('Sign me in') %></button>  
                        </p>
                        <p><a href="/forgotpassword"><%= __('login-forgot-my-password') %></a></p>
                    </div>
                </div>
            </form>

           <div class="margin text-center">
                <a href="/login-blockstack" class="btn btn-primary btn-sm"><i class="fa fa-cube"></i> <%= __('login-with-blockstack-button') %></i></a>
            </div>
        </div>

        <script src="/js/dependencies/jquery.min.js"></script>
        <script src="/js/dependencies/bootstrap.min.js" type="text/javascript"></script>

    </body>
</html>