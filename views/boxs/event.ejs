<div class="box box-success" data-ng-controller="EventBoxCtrl as vm">
    <div class="box-header with-border">
        <i class="fa fa-dot-circle-o"></i>
        <h3 class="box-title">
            <%= __('box-event-title') %>
        </h3>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div class="row ng-cloak">
            <div class="col-md-4">
                <select ng-model="vm.newEvent.code" class="form-control">
                    <option ng-repeat="eventType in vm.eventTypes" value="{{eventType.code}}">{{eventType.name}}</option>
                </select>
            </div>
            <div class="col-md-4"> <select ng-model="vm.newEvent.user" class="form-control"><option ng-repeat="user in vm.users" value="{{user.id}}">{{user.firstname}} {{user.lastname}}</option>        </select> </div>
            <div class="col-md-4"> <select ng-model="vm.newEvent.house" class="form-control"><option ng-repeat="house in vm.houses" value="{{house.id}}">{{house.name}}</option>        </select> </div>
        </div>
        <div class="row" style="margin-top:20px;">
            <div class="col-md-12"> <button class="btn btn-block btn-success btn-flat" ng-click="vm.createEvent(vm.newEvent);"><%= __('box-event-create') %></button></div>
        </div>
    </div>
    <!-- /.box-body -->
</div>