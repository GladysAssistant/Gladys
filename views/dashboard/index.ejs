<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <%= __('Home') %>
            <small><%= __('Control Panel') %></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> <%= __('Home') %></a></li>
            <li class="active"><%= __('Dashboard') %></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Main row -->
        <div class="row">


            <!-- Left col -->
            <section class="col-lg-7 connectedSortable"> 
                
             <!-- If there are no box on dashboard ! -->
             <% if(boxs.length === 0) { %>
                    
                 <div class="box box-info">
                        
                        <div class="box-header">
                            <i class="fa fa-info"></i>
                            <h3 class="box-title"><%= __('dashboard-default-box-title') %></h3>
                        </div><!-- /.box-header -->
                        
                        <div class="box-body"><%= __('dashboard-default-box-text') %></div>
                        <!-- /.box-body -->
                    </div><!-- /.box -->
                    
              <% }  %>
              <!-- end of default box -->      
                
                
                <!-- ALL LEFT BOX COMES HERE --> 
                
                <% 
                   for(var i = 0; i < boxs.length; i++) { 
                        if(boxs[i].x == 1) {
                %>                
                                     
                    <div class="box <%= boxs[i].type %>"  <% if(boxs[i].ngcontroller && boxs[i].ngcontroller.length > 0 ) { %> data-ng-controller="<%= boxs[i].ngcontroller %>" <% } %> ng-init="vm.init(<%= boxs[i].boxId %>);" >

                        <div class="box-header">
                            <i class="<%= boxs[i].icon %>"></i>
                            <h3 class="box-title"><%= boxs[i].title %></h3>
                            <!--<div class="box-tools pull-right">
                                <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                                <button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="" ng-click="vm.remove(<%= boxs[i].id %>);" data-original-title="Remove"><i class="fa fa-times"></i></button>
                            </div>-->
                        </div><!-- /.box-header -->
                        
                        <div class="box-body"><%- boxs[i].html %></div>
                        <!-- /.box-body -->
                        
                        <% if(boxs[i].footer) { %>
                             <div class="box-footer text-black"><%- boxs[i].footer %></div>
                         <% } %>
                    </div><!-- /.box -->
                    
               <%
                    } // end of if
                 } // end of for loop
               %>
               
               <!-- END OF LOOP OF LEFT BOXS --> 

            </section><!-- /.Left col -->


            <!-- right col (We are only adding the ID to make the widgets sortable)-->
            <section class="col-lg-5 connectedSortable"> 
            
                    
                <!-- ALL RIGHT BOX COMES HERE --> 
                
                <% 
                   for(var i = 0; i < boxs.length; i++) { 
                        if(boxs[i].x == 2) {
                %>                
                                     
                    <div class="box <%= boxs[i].type %>"  <% if(boxs[i].ngcontroller && boxs[i].ngcontroller.length > 0 ) { %> data-ng-controller="<%= boxs[i].ngcontroller %>" <% } %> ng-init="vm.init(<%= boxs[i].boxId %>);" >
                        <div class="box-header">
                            <i class="<%= boxs[i].icon %>"></i>
                            <h3 class="box-title"><%= boxs[i].title %></h3>
                            <!--<div class="box-tools pull-right">
                                <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
                                <button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove"><i class="fa fa-times"></i></button>
                            </div>-->
                        </div><!-- /.box-header -->
                        
                        <div class="box-body"><%- boxs[i].html %></div>
                        <!-- /.box-body -->
                        
                         <% if(boxs[i].footer) { %>
                             <div class="box-footer text-black"><%- boxs[i].footer %></div>
                         <% } %>
                    </div><!-- /.box -->
                    
               <%
                    } // end of if
                 } // end of for loop
               %>
               
               <!-- END OF LOOP OF RIGHT BOXS -->                  

                                            

            </section><!-- right col -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside><!-- /.right-side -->

<script>
    document.getElementById("homeLi").className = "active";
</script>